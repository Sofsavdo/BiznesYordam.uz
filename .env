# Database Configuration
# For PostgreSQL production:
DATABASE_URL=postgresql://username:password@localhost:5432/biznesyordam_db
# For SQLite development (current setup):
# DATABASE_URL is automatically configured in development mode

# Session Configuration
SESSION_SECRET=biznesyordam-super-secret-session-key-2024-production-ready

# Environment
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_ORIGIN=http://localhost:5000

# API URL
VITE_API_URL=http://localhost:5000

# Auto setup database
DATABASE_AUTO_SETUP=true

# Production settings
PORT=5000
HOST=0.0.0.0

# Security
CORS_ORIGIN=http://localhost:5000,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# WebSocket settings
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Marketplace Integration Settings
