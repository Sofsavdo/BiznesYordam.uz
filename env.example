# Database Configuration
# If you DO NOT have PostgreSQL on hosting, use SQLite persistent file path:
# On cPanel shared hosting, set an absolute path like:
# SQLITE_PATH=/home/USERNAME/biznesyordam/data/app.db
# If you have PostgreSQL, set DATABASE_URL instead of SQLITE_PATH
# DATABASE_URL=postgresql://username:password@localhost:5432/marketpro_db
SQLITE_PATH=./data/app.db

# Session
SESSION_SECRET=your-super-secret-session-key-here

# Environment
NODE_ENV=production

# Frontend URL (for CORS)
# For single-domain deploy (same origin), keep this the same as domain
FRONTEND_ORIGIN=https://biznesyordam.uz

# API URL - Backend URL manzili (Production)
# With same-origin deploy on cPanel, you can leave empty or set to domain
VITE_API_URL=

# Auto setup database
DATABASE_AUTO_SETUP=true

# Production settings
PORT=5000
HOST=0.0.0.0

# Security
# Allow your production domain(s)
CORS_ORIGIN=https://biznesyordam.uz,https://www.biznesyordam.uz
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# WebSocket settings
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
ENABLE_WEBSOCKETS=true

# Marketplace Integration Settings
# Uzum Market API (Placeholder - get from Uzum Partner Portal)
UZUM_API_KEY=your_uzum_api_key_here
UZUM_SELLER_ID=your_uzum_seller_id
UZUM_API_URL=https://api.uzum.uz/api/v1

# Wildberries API (Placeholder - get from WB Partner Portal)
WILDBERRIES_API_KEY=your_wb_api_key_here
WILDBERRIES_SUPPLIER_ID=your_wb_supplier_id

# Yandex Market API (Placeholder - get from Yandex Partner Portal)
YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_CAMPAIGN_ID=your_yandex_campaign_id

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Telegram Bot (Optional - for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
