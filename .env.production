# Production Environment Variables for Render Deployment

# Database Configuration
# DATABASE_URL will be set in Render dashboard

# Session
SESSION_SECRET=your-super-secret-session-key-here-change-in-production

# Environment
NODE_ENV=production

# Frontend URL (for CORS) - Update with your actual domain
FRONTEND_ORIGIN=https://biznesyordam.uz

# API URL
VITE_API_URL=https://biznesyordam.uz

# Auto setup database
DATABASE_AUTO_SETUP=true

# Production settings
PORT=5000
HOST=0.0.0.0

# Security
CORS_ORIGIN=https://biznesyordam.uz,https://www.biznesyordam.uz
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# WebSocket settings
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Marketplace Integration Settings
# These should be set in Render dashboard
UZUM_API_KEY=your_uzum_api_key_here
UZUM_SELLER_ID=your_uzum_seller_id
UZUM_API_URL=https://api.uzum.uz/api/v1

WILDBERRIES_API_KEY=your_wb_api_key_here
WILDBERRIES_SUPPLIER_ID=your_wb_supplier_id

YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_CAMPAIGN_ID=your_yandex_campaign_id

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id