# Production Environment Variables for SellerCloudX
# Railway Deployment

# Database Configuration
# Railway will provide DATABASE_URL automatically for PostgreSQL
# If using SQLite: DATABASE_URL=file:./production.db

# Session Security - CHANGE THIS IN RAILWAY DASHBOARD!
SESSION_SECRET=SellerCloudX-2024-Ultra-Secure-Production-Key-Change-This

# Environment
NODE_ENV=production

# Railway automatically sets PORT - don't override
# PORT will be set by Railway

# Host
HOST=0.0.0.0

# Auto setup database
DATABASE_AUTO_SETUP=true

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# WebSocket settings
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Marketplace Integration Settings
# These should be set in Render dashboard
UZUM_API_KEY=your_uzum_api_key_here
UZUM_SELLER_ID=your_uzum_seller_id
UZUM_API_URL=https://api.uzum.uz/api/v1

WILDBERRIES_API_KEY=your_wb_api_key_here
WILDBERRIES_SUPPLIER_ID=your_wb_supplier_id

YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_CAMPAIGN_ID=your_yandex_campaign_id

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
